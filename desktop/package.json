{
  "name": "meeting-scraper",
  "version": "1.0.0",
  "description": "Meeting Scraper Desktop App",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/sidekick2020/meeting-scraper.git"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac --arm64",
    "build:intel": "electron-builder --mac --x64",
    "build:universal": "electron-builder --mac --universal",
    "build:all": "electron-builder --mac --win --linux"
  },
  "author": "Meeting Scraper",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.meetingscraper.app",
    "publish": null,
    "productName": "Meeting Scraper",
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64"]
        }
      ],
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "dmg": {
      "title": "Meeting Scraper",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "main.js",
      "preload.js"
    ]
  }
}
